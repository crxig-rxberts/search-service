{
  "name": "search-service",
  "version": "1.0.0",
  "description": "Search service with Elasticsearch integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "lint": "eslint .",
    "docker:build": "docker build -t search-service .",
    "docker:run": "docker run -p 3002:3002 -d search-service",
    "docker:run:local": "docker run --name search-service --network bookit-network -p 3002:3002 -d search-service",
    "docker:stop": "docker stop search-service",
    "docker:clean": "docker rm search-service"
  },
  "private": true,
  "dependencies": {
    "@elastic/elasticsearch": "8.15.0",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@eslint/js": "^9.11.1",
    "@jest/globals": "^29.7.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.11.1",
    "eslint-plugin-jest": "^28.8.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0"
  }
}
